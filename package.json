{
  "name": "ps-replace-accents",
  "displayName": "Replace Accents",
  "version": "0.0.9",
  "publisher": "playful-sparkle",
  "description": "Remove accents/diacritics from text to generate clean text through Unicode normalization and custom character mappings.",
  "author": {
    "name": "Zsolt Oroszl√°ny",
    "email": "hello@playfulsparkle.com"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "icon": "img/icon.png",
  "galleryBanner": {
    "color": "#e61a4a",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/playful-sparkle.ps-replace-accents?style=flat-square",
      "href": "https://marketplace.visualstudio.com/items?itemName=playful-sparkle.ps-replace-accents",
      "description": "The latest version of this extension"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/i/playful-sparkle.ps-replace-accents?style=flat-square",
      "href": "https://marketplace.visualstudio.com/items?itemName=playful-sparkle.ps-replace-accents",
      "description": "Number of installs for this extension"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/stars/playful-sparkle.ps-replace-accents?style=flat-square",
      "href": "https://marketplace.visualstudio.com/items?itemName=playful-sparkle.ps-replace-accents",
      "description": "Number of stars for this extension"
    }
  ],
  "pricing": "Free",
  "engines": {
    "vscode": "^1.98.0"
  },
  "main": "dist/extension.js",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/playfulsparkle/vscode_ps_replace_accents.git"
  },
  "bugs": {
    "url": "https://github.com/playfulsparkle/vscode_ps_replace_accents/issues"
  },
  "homepage": "https://github.com/playfulsparkle/vscode_ps_replace_accents#readme",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "keywords": [
    "ascii",
    "diacritics",
    "accent",
    "letter",
    "alphabet",
    "remove",
    "replace",
    "playfulsparkle",
    "vscode",
    "extension"
  ],
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "ps-replace-accents.replaceAccentsFileOrFolder",
        "title": "%extension.command.replaceAccentsFileOrFolder.title%"
      },
      {
        "command": "ps-replace-accents.replaceAccents",
        "title": "%extension.command.replaceAccents.title%",
        "category": "%extension.category.utilities.title%"
      },
      {
        "command": "ps-replace-accents.restoreAccents",
        "title": "%extension.command.restoreAccents.title%",
        "category": "%extension.category.utilities.title%"
      },
      {
        "command": "ps-replace-accents.reportIssue",
        "title": "%extension.command.reportIssue.title%",
        "category": "%extension.category.help.title%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ps-replace-accents.replaceAccentsFileOrFolder",
          "group": "7_modification",
          "when": "explorerResourceIsFolder == false"
        },
        {
          "command": "ps-replace-accents.replaceAccentsFileOrFolder",
          "group": "7_modification",
          "when": "explorerResourceIsFolder == true"
        }
      ],
      "issue/reporter": [
        {
          "command": "ps-replace-accents.reportIssue"
        }
      ]
    },
    "configuration": {
      "title": "%extension.config.replaceAccents.title%",
      "properties": {
        "ps-replace-accents.accentRemoveMapping": {
          "type": "object",
          "default": {},
          "description": "%extension.config.accentRemoveMapping.desc%",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ps-replace-accents.accentDictionary": {
          "type": "string",
          "default": "hungarian",
          "description": "%extension.config.accentDictionary.desc%",
          "enum": [
            "hungarian",
            "slovak",
            "czech",
            "german",
            "polish"
          ]
        },
        "ps-replace-accents.accentRestoreSuffixMatching": {
          "type": "boolean",
          "default": false,
          "description": "%extension.config.accentRestoreSuffixMatching.desc%"
        },
        "ps-replace-accents.accentIgnoredWords": {
          "type": "string",
          "default": "",
          "description": "%extension.config.accentIgnoredWords.desc%",
          "editPresentation": "multilineText"
        }
      }
    },
    "keybindings": [
      {
        "command": "ps-replace-accents.replaceAccents",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}